/* components/city/city.wxss */
page{
    width: 100%;
    height: 100%;
}

.containner{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.searchLetter {
    position: fixed;
    right: 0;
    width: 50rpx;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #666;
    z-index: 1;
}

.searchLetter view {
    margin-top: 20rpx;
}

.touchClass {
    background-color: #fff;
    color: #fff;
    padding-top: 46rpx;
}

.showSlectedLetter {
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 50%;
    left: 50%;
    margin: -100rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    font-size: 52rpx;
    z-index: 1;
}

.selection {
    display: flex;
    width: 100%;
    flex-direction: column;
}

.item_letter {
    display: flex;
    background-color: #f5f5f5;
    height: 40rpx;
    padding-left: 34rpx;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.item_city {
    display: flex;
    background-color: #fff;
    height: 100rpx;
    padding-left: 34rpx;
    align-items: center;
    border-bottom: 1rpx solid #ededed;
    font-size: 24rpx;
    color: #666;
}

.hotcity-common {
    font-size: 24rpx;
    color: #666;
    padding: 0 0 0 30rpx;
}

.thisCityName {
    display: inline-block;
    border: 1rpx solid #2ab4ff;
    border-radius: 8rpx;
    padding: 10rpx 0;
    font-size: 24rpx;
    color: #2ab4ff;
    text-align: center;
    min-width: 149.5rpx;
    margin: 20rpx 0 20rpx 30rpx;
}

.thishotText {
    color: #2ab4ff;
    font-size: 20rpx;
    margin: 0 !important;
}

.slectCity {
    border-color: #2ab4ff !important;
}

.slectCity view {
    color: #2ab4ff !important;
}

.weui-grids {
    display: flex;
    padding-left: 15rpx;
}

.weui-grid {
    position: relative;
    padding: 10rpx 0;
    width: 149.5rpx;
    box-sizing: border-box;
    border: 1rpx solid #ececec;
    border-radius: 8rpx;
    margin: 10rpx 12rpx;
}

.weui-grid__label {
    display: block;
    text-align: center;
    color: #333;
    font-size: 24rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.header {
    background-color: #fff;
    height: 100rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    width: 750rpx;
    align-items: center;
}

.search-container {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    margin-left: 20rpx;
}

.books-container book-cmp {
    margin-bottom: 25rpx;
}

.icon {
    width: 14px;
    height: 14px;
    margin-left: 12px;
    margin-right: 8px;
}

.bar {
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    display: inline-block;
    height: 34px;
    width: 550rpx;
    font-size: 14px;
}

.tip {
    text-align: center;
    margin-top: 200rpx;
    color: #666;
}

.cancel {
    line-height: 34px;
    width: 60px;
    text-align: center;
    display: inline-block;
    border: none;
    font-size:32rpx;

}
