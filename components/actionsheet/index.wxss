/* components/actionsheet/index.wxss */
.select-warp{
   color: #323232;
   font-family:PingFang-SC-Medium Microsoft YaHei;
}

.mask{
    position:fixed;
    z-index:99;
    left:0;
    top:0;
    width:100%;
    height:100%;
    background:rgba(0, 0, 0, 0.5);

}
.select{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 280rpx;
    background: #efeff4;
    z-index: 100;
    transition: all .3s;
}

.select view{
    background: #fff;
    font-size:32rpx;
    height: 90rpx;
    line-height:90rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
}
.select view:last-child{
    border-bottom: none;
}

.cancel{
    margin-top: 10rpx;
}
.send{
    position: relative;
}

.btn{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;left: 0;
    opacity: 0;
}
.enter{
  transform: translateY(0);
}

.leave{
  transform: translateY(280rpx);
}

