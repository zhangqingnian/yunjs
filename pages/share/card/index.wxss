.cardContent .top{
    justify-content: space-between;
    align-items: center;
}

.cardContent .user{
    align-items: center;
}

.avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.nickName{
    font-size: 32rpx;
    margin-left: 20rpx;
}

.revise{
    font-size: 24rpx;
    color: #fff;
    width:140rpx;
    height:50rpx;
    background:rgba(99,175,224,1);
    border-radius:20rpx;
    text-align: center;
    line-height: 50rpx;
}

.cardContent .bottom{
    margin-left: 120rpx;
}

.cardContent .bottom .icon{
    width: 32rpx;
    height: 32rpx;
}

.cardContent .bottom .bottomItem{
    /* margin-bottom: 15rpx; */
}
.tex{
    width: 100%;
    height: 120rpx;
    overflow-y: scroll;
}
.cardContent .bottom .bottomItem:last-child{
    margin-bottom: 0rpx;
}

.cardContent .bottom .val{
    font-size: 30rpx;
    margin-left: 20rpx;
}

.share{
    width: 32rpx;
    height: 32rpx;
}

.nav{
    background: #fff;
    margin: 30rpx 0;
    width: 100%;
    height: 90rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    justify-content: space-between;
    align-items: center;
}

.nav .left{
    align-items: center;
}

.shop{
    font-size: 24rpx;
    color: #fff;
    width:140rpx;
    height:50rpx;
    background:rgba(99,175,224,1);
    border-radius:20rpx;
    text-align: center;
    line-height: 50rpx;
    margin-left: 30rpx;
}

.listwarp{
    height: calc(100% - 458rpx);
}
.list{
    padding: 0 30rpx;
    flex-flow: wrap;
}

.item{
    width: 330rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}
.item:nth-child(2n){
    margin-right: 0;
}
.itemImg{
    width: 330rpx;
    height: 220rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.itemImg image{
    width: 330rpx;
    height: 220rpx;
    background: silver;
}

.itemBottom{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    box-sizing: border-box;
    padding: 0 10rpx;
    font-size: 22rpx;
    color: #fff;
    justify-content: space-between;
    align-items: center;
    background:rgba(99,224,140,.5);
}

.coupon{
    position: absolute;
    right: 0;
    top:20rpx;
    width:120rpx;
    height:40rpx;
    background:rgba(218,8,8,.5);
    border-radius:10rpx 0rpx 0rpx 10rpx;
    color: #fff;
    font-size: 22rpx;
    line-height: 40rpx;
    text-align: center;
}

.itemImg .recom{
    position: absolute;
    left: 10rpx;
    top:10rpx;
    width:70rpx;
    height:70rpx;
    border-radius: 50%;
}

.news{
    font-size: 22rpx;
    justify-content: space-between;
    align-items: flex-end;
}

.news .box .cardName{
    margin: 10rpx 0;
}

.itemRevise{
    width:64rpx;
    height:50rpx;
    background:rgba(255,125,37,1);
    border-radius:10rpx;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
}
.price{
    color: #DA0808;
}


.oldPrice{
    margin-left: 20rpx;
    text-decoration: line-through;
}




