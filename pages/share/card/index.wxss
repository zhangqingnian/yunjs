/* pages/card/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.containner{
    width: 100%;
    height: 100%;
    background: #F5F5F5;
    color: #323232;
}
.warps {
    position: relative;
    width:690rpx;
    height:300rpx;
    border-radius: 30rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    overflow: hidden;
}
.bgimg{
    width:690rpx;
    height:300rpx;
}
.cardContent{
    position: absolute;
    left: 0;top:0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding:20rpx 30rpx;
}
